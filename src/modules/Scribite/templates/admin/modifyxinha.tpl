{adminheader}<div class="z-admin-content-pagetitle">    <img src="{$baseurl}modules/Scribite/lib/Scribite/Editor/Xinha/logo.gif" height='22'>    <h3>{gt text='Xinha configuration'}</h3></div>{form cssClass="z-form"}{formvalidationsummary}<fieldset>        <legend>{gt text='Settings'}</legend>        <div class="z-formrow">            {formlabel for="xinha_language" __text="Language"}            {formdropdownlist id="xinha_language" items=$xinha_langlist selectedValue=$xinha_language|default:en}        </div>        <div class="z-formrow">            {formlabel for="xinha_barmode" __text="Toolbar"}            {formdropdownlist id="xinha_barmode" items=$xinha_barmodes selectedValue=$xinha_barmode|default:reduced}        </div>        <div class="z-formrow">            {formlabel for="xinha_skin" __text="Skin"}            {formdropdownlist id="xinha_skin" items=$xinha_skinlist}        </div>        <div class="z-formrow">            {formlabel __text="Editor width and height"}            <div>                {formtextinput id="xinha_width" size="5" maxLength="6"}                {formlabel for="xinha_width" __text="px/(auto)"}                {formtextinput id="xinha_height" size="5" maxLength="6"}                {formlabel for="xinha_height" __text="px/(auto)"}            </div>        </div>        <div class="z-formrow">            {formlabel for="xinha_style" __text="Editor stylesheet"}            {formtextinput id="xinha_style" size="40" maxLength="150" text="modules/Scribite/style/xinha/editor.css"}            <em class="z-formnote z-sub">{gt text="You can try to enter your theme stylesheet here if you want."}</em>            <em class="z-formnote z-sub">{gt text="In most cases, the editor fits to the theme then."}</em>            <em class="z-formnote z-sub">{gt text="Example: themes/SeaBreeze/style/style.css"}</em>        </div>        <div class="z-formrow">            {formlabel for="xinha_style_dynamiccss" __text="Stylesheet for DynamicCSS plugin"}            {formtextinput id="xinha_style_dynamiccss" size="40" maxLength="150" text='modules/Scribite/style/xinha/DynamicCSS.css'}        </div>        <div class="z-formrow">            {formlabel for="xinha_style_stylist" __text="Stylesheet for Stylist plugin"}            {formtextinput id="xinha_style_stylist" size="40" maxLength="150" text="modules/Scribite/style/xinha/stylist.css"}        </div>        <div class="z-formrow">            {formlabel for="xinha_converturls" __text="Convert urls to links"}            {formcheckbox id="xinha_converturls"}        </div>        <div class="z-formrow">            {formlabel for="xinha_showloading" __text="Show loading"}            {formcheckbox  id="xinha_showloading"}        </div>        <div class="z-formrow">            {formlabel for="xinha_statusbar" __text="Statusbar"}            {formcheckbox id="xinha_statusbar"}        </div>    </fieldset>    <fieldset>        <legend>{gt text="Xinha Plugins (<a href=\"http://xinha.webfactional.com/wiki/Plugins\">documentation</a>)"}</legend>        <p class="z-warningmsg">{gt text="Please do not activate the plug-ins DynamicCSS and Stylist simultaneously, because then the HTML source code toggle isn't working properly."}</p>        <div class="z-formrow">            {formcheckboxlist id="xinha_activeplugins" items=$xinha_allplugins}        </div>    </fieldset>    <div class="z-buttons z-formbuttons">        {formbutton class="z-bt-ok" commandName="save" __text="Save"}        {formbutton class="z-bt-cancel" commandName="cancel" __text="Cancel"}    </div>{/form}{adminfooter}