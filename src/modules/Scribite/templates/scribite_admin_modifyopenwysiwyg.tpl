{gt text="openWYSIWYG configuration" assign='templatetitle'}{include file="scribite_admin_menu.tpl"}<div class="z-admincontainer">    <div class="z-adminpageicon"><a href="http://www.openwebware.com/products/openwysiwyg/"><img src="modules/Scribite/images/openwysiwyg.gif" height="32" width="88" alt="openWYSIWYG - Free Open Source WYSIWYG Editor" /></a></div>    <h2>{$templatetitle}</h2>    <form class="z-form" action="{modurl modname="scribite" type="admin" func="updateopenwysiwyg"}" method="post" enctype="application/x-www-form-urlencoded">        <div>            <input type="hidden" name="csrftoken" value="{insert name="csrftoken"}" />            <fieldset>                <legend>{$templatetitle}</legend>                <div class="z-formrow">                    <label for="openwysiwyg_barmode">{gt text="Toolbar"}</label>                    <select id="openwysiwyg_barmode" name="openwysiwyg_barmode">                        <option label="full" value="full"{if $openwysiwyg_barmode eq "full"} selected="selected"{/if}>{gt text="full"}</option>                        <option label="reduced" value="reduced"{if $openwysiwyg_barmode eq "reduced"} selected="selected"{/if}>{gt text="reduced"}</option>                    </select>                </div>                <div class="z-formrow">                    <label>{gt text="Editor width and height"}</label>                    <div>                        <input id="openwysiwyg_width" type="text" name="openwysiwyg_width" size="5" maxlength="6" value="{$openwysiwyg_width|safetext}" />                        <label for="openwysiwyg_width">{gt text="px"}</label>                        <input id="openwysiwyg_height" type="text" name="openwysiwyg_height" size="5" maxlength="6" value="{$openwysiwyg_height|safetext}" />                        <label for="openwysiwyg_height">{gt text="px"}</label>                    </div>                </div>            </fieldset>            <div class="z-buttons z-formbuttons">                {button src='button_ok.png' set='icons/extrasmall' __alt="Save" __title="Save" __text="Save"}                <a href="{modurl modname='scribite' type='admin' func='modules'}">{img modname='core' src='button_cancel.png' set='icons/extrasmall' __alt="Cancel" __title="Cancel"} {gt text="Cancel"}</a>            </div>        </div>    </form></div>